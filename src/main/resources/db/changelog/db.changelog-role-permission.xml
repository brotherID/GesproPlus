<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
     https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="1" author="sara">
        <createTable tableName="role">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(255)"/>
            <column name="is_admin" type="BOOLEAN"/>
            <column name="is_super_admin" type="BOOLEAN"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="sara">
        <createTable tableName="permission">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="permission" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="sara">
        <createTable tableName="roles_permissions">
            <column name="role_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="permission" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="roles_permissions"
                baseColumnNames="role_id"
                referencedTableName="role"
                referencedColumnNames="id"
                constraintName="fk_roles_permissions_role"/>
    </changeSet>

</databaseChangeLog>
