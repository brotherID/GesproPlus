<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1-create-user-account" author="sara">
        <createTable tableName="user_account">
            <column name="id_user_account" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)"/>
            <column name="enabled" type="BOOLEAN"/>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="email_verified" type="BOOLEAN"/>
            <column name="role_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="user_account"
                baseColumnNames="role_id"
                referencedTableName="role"
                referencedColumnNames="id"
                constraintName="fk_user_account_role"/>
    </changeSet>

    <changeSet id="2-create-user-credentials" author="sara">
        <createTable tableName="user_credentials">
            <column name="user_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(100)"/>
            <column name="value" type="VARCHAR(255)"/>
            <column name="temporary" type="BOOLEAN"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="user_credentials"
                baseColumnNames="user_id"
                referencedTableName="user_account"
                referencedColumnNames="id_user_account"
                constraintName="fk_user_credentials_user_account"/>
    </changeSet>

</databaseChangeLog>

